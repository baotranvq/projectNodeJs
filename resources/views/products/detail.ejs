    <script>
        

        fetch ('/users/APIproductsDetail<%=id%>')
        .then (function(res){
            if(!res.ok){throw new Error("Error:" + res.status)}
            return res.json()
        })
        .then (function(data){
            document.getElementById('detail-information').innerHTML = `
            <h4>${data[0].product_name}</h4>
            <span style="font-size: 16px">${data[0].type} Shoes</span><br>
            <div class="detail-price">
                ${ data[0].promotion_price >0 ? `<span class="detail-cardPrice">${data[0].price.toLocaleString('vi-VN')} đ </span>` : `<span>${data[0].price.toLocaleString('vi-VN')} đ </span>`}        
                ${ data[0].promotion_price >0 ? `<span>${data[0].promotion_price.toLocaleString('vi-VN')} đ </span>` : ''} 
            </div>  `
            let result = document.getElementById('detail-product')
            result.innerHTML = `
            <div class="product-listImage">
                    <div class="product-imageSmall">
                        <div class="detail-img-thumbnail " id="product-image-1" type="button">
                            <img onmouseover="hoverImg()" src="../../.././images/products/${data[0].thumbnail_1}" alt="" width="80px">
                        </div>
                        <div class="detail-img-thumbnail" id="product-image-2" type="botton">
                            <img onmouseover="hoverImg()" src="../../.././images/products/${data[0].thumbnail_2}" alt="" width="80px">
                        </div>
                        <div class="detail-img-thumbnail" id="product-image-3" type="botton">
                            <img onmouseover="hoverImg()" src="../../.././images/products/${data[0].thumbnail_3}" alt="" width="80px">
                        </div>
                        <div class="detail-img-thumbnail" id="product-image-4" type="botton">
                            <img onmouseover="hoverImg()" src="../../.././images/products/${data[0].thumbnail_4}" alt="" width="80px">
                        </div>
                    </div>

                    <div class="product-imageBig">
                        <img id="product-imageBig" src="../../.././images/products/${data[0].big_image_1}" alt="" width="530px" height="600px">
                    </div>
                </div>
            `

            let result1 = document.querySelector('.product-listSmall')
            let result2 = document.getElementById('product-selectSize')
            var uniqueColorNames = {}; // Đối tượng để lưu trữ các color_name đã xuất hiện
            data.forEach(product =>{
                var colorName = product.color_name
                // Kiểm tra xem color_name đã xuất hiện chưa
                if (!uniqueColorNames[colorName]) {
                    result1.innerHTML += `
                        <img src="../../.././images/products/${product.thumbnail_1}" alt="" width="80px"> `
                    uniqueColorNames[colorName] = true; // Đánh dấu color_name đã xuất hiện
                }
               
                
            })
            function hoverImg(){
                document.getElementById(product-imageBig).setAttribute("src", "../../.././images/products/air-jordan-1-low-big1.png")
            }
            data.forEach(element => {
                
                result2.innerHTML += `
                <div class="detail-size">${element.size_name}</div>  `
            })
        })
        .catch (function(err){
            console.log("Error: " + err)
        })
    </script>
 
